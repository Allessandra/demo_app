<li>
		<div class="row">
			<div class="col-md-6">
				<h4><span class="title"><%= post.title%></span></h4>
			</div>
		</div>
		<div class="row">
			<div class="col-md-6">
				<span class="content"><%=truncate(post.content,:length=>50) %></span>
			</div>
		</div>
	<span class="timestamp">
		Posted <%= time_ago_in_words(post.created_at)%> ago.
	</span>
	<% if current_user?(post.user)%>
		<%= link_to "delete",post,method: :delete,data: {confirm: "You sure?"} %>
		<%= link_to "edit",edit_post_path(post) %>
		<%= link_to "details",post_path(post)%>


	<% end%>	                          
</li>
