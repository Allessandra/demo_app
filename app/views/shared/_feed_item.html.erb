<li id="<%= feed_item.id%>">
	<%= link_to gravatar_for(feed_item.user),feed_item.user%>
	<span class="user">
		<%=link_to feed_item.user.name,feed_item.user%>
	</span>
	<div class ="row">
	<h3><span class="title"><%= feed_item.title%></span></h3>
	</div>
	<div class ="row">
	<span class="title"><%= truncate(feed_item.content,:length=>50)%></span>
	</div>
	<div class="row">
		<div class="col-md-2">
	<span class="timestamp">
		Posted <%= time_ago_in_words(feed_item.created_at)%> ago.
	</span>
	</div>
	<div class="col-md-2">
	<% if current_user?(feed_item.user)%>
		<%= link_to "delete",feed_item,method: :delete, data: {confirm: "You sure?"}  %>
		<%= link_to "edit",edit_post_path(feed_item) %>
		<%= link_to "details",post_path(feed_item)%>
	<% end%>
	</div>
		</div>

</li>
